<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorCharlestonGreen"
            android:clickable="false"
            android:textAlignment="center"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:textAlignment="center">

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="118dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="245dp"
                    app:srcCompat="@drawable/ic_phonelink_ring_black_24dp" />

                <TextView
                    android:id="@+id/textoDeStatusConexao"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="245dp"
                    android:text="Estufa Casa"
                    android:textAlignment="center"
                    android:textColor="@color/colorPalmLeaf"
                    app:layout_anchor="@+id/appBarLayout2"
                    app:layout_anchorGravity="right|center" />

            </LinearLayout>

        </android.support.v7.widget.Toolbar>




    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_main" />


</android.support.design.widget.CoordinatorLayout>